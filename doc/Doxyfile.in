DOXYFILE_ENCODING       = UTF-8
PROJECT_NAME            = prequel

OUTPUT_DIRECTORY        = @PROJECT_BINARY_DIR@/doc/doxygen
INPUT                   = @PROJECT_SOURCE_DIR@/include/prequel
FILE_PATTERNS           = *.c *.cpp *.h *.hpp
RECURSIVE               = YES
CLANG_ASSISTED_PARSING  = YES
CLANG_OPTIONS           = --std=c++1z
INCLUDE_PATH            = @PROJECT_SOURCE_DIR@/include
STRIP_FROM_PATH         = @PROJECT_SOURCE_DIR@/ \
                          @PROJECT_SOURCE_DIR@/include \
                          @PROJECT_BINARY_DIR@/

JAVADOC_AUTOBRIEF       = YES
SORT_BRIEF_DOCS         = NO
EXTRACT_ALL             = YES
EXTRACT_PRIVATE         = NO
EXTRACT_LOCAL_CLASSES   = NO
HIDE_UNDOC_MEMBERS      = NO
HIDE_UNDOC_CLASSES      = YES
INTERNAL_DOCS           = NO
DISTRIBUTE_GROUP_DOC	= YES

ENABLE_PREPROCESSING    = YES
PREDEFINED              = PREQUEL_DEBUG


VERBATIM_HEADERS        = NO
CASE_SENSE_NAMES        = NO
GENERATE_LATEX          = NO
GENERATE_MAN            = NO
GENERATE_HTML           = NO
GENERATE_RTF            = NO
GENERATE_XML            = YES
QUIET 					= YES

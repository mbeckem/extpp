DOXYFILE_ENCODING       = UTF-8
PROJECT_NAME            = prequel

OUTPUT_DIRECTORY        = @PROJECT_BINARY_DIR@/doc/doxygen
INPUT                   = @PROJECT_SOURCE_DIR@/include/prequel
FILE_PATTERNS           = *.c *.cpp *.ipp *.h *.hpp
RECURSIVE               = YES
CLANG_ASSISTED_PARSING  = YES
CLANG_OPTIONS           = --std=c++1z -Wno-exceptions
INCLUDE_PATH            = @PROJECT_SOURCE_DIR@/include
STRIP_FROM_PATH         = @PROJECT_SOURCE_DIR@/ \
                          @PROJECT_SOURCE_DIR@/include \
                          @PROJECT_BINARY_DIR@/
EXCLUDE_SYMBOLS         = prequel::detail

ALIASES                 = "rst=\verbatim embed:rst"
ALIASES                 += "endrst=\endverbatim"

EXTRACT_ALL             = YES
ENABLE_PREPROCESSING    = YES
DISTRIBUTE_GROUP_DOC    = YES
HIDE_UNDOC_RELATIONS    = YES
PREDEFINED              = PREQUEL_DEBUG

VERBATIM_HEADERS        = NO
CASE_SENSE_NAMES        = NO
GENERATE_LATEX          = NO
GENERATE_MAN            = NO
GENERATE_HTML           = NO
GENERATE_RTF            = NO
GENERATE_XML            = YES
XML_PROGRAMLISTING      = NO
QUIET                   = YES
